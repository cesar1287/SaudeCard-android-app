<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcesar1287.github.www.saudecard.view.SignInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_0005_bg"/>

    <EditText
        android:id="@+id/sign_in_etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_border"
        android:padding="5dp"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:hint="@string/hint_email"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="textEmailAddress" />
    
    <EditText
        android:id="@+id/sign_in_etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_border"
        android:padding="5dp"
        android:layout_below="@+id/sign_in_etEmail"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:hint="@string/hint_password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textPassword"/>

    <ImageButton
        android:id="@+id/sign_in_btLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_0002_login_button"
        android:layout_below="@+id/sign_in_etPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>

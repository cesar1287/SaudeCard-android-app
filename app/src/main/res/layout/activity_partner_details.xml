<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_partner_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PartnerDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/partner_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:theme="@style/ToolbarColoredBackArrow">

            <comcesar1287.github.www.saudecard.controller.custom_widgets.MyCustomTextView
                android:id="@+id/tv_title_action_bar"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:text="Nome Parceiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/partner_details_banner"
            android:layout_below="@id/partner_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/banner_0015_saude"
            android:scaleX="1.02"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"/>

        <comcesar1287.github.www.saudecard.controller.custom_widgets.MyCustomTextView
            android:textColor="@color/colorTextPartner"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/partner_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/partner_details_banner"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true" />

        <comcesar1287.github.www.saudecard.controller.custom_widgets.MyCustomTextView
            android:textColor="@color/colorTextPartner"
            android:id="@+id/partner_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/partner_details_name"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30sp"
            android:paddingStart="30sp"
            android:paddingRight="30sp"
            android:paddingEnd="30sp"/>

        <comcesar1287.github.www.saudecard.controller.custom_widgets.MyCustomTextView
            android:textColor="@color/colorTextPartner"
            android:id="@+id/partner_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/partner_details_description"
            android:layout_marginBottom="20sp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30sp"
            android:paddingStart="30sp"
            android:paddingRight="30sp"
            android:paddingEnd="30sp"/>

        <RelativeLayout
            android:id="@+id/map_fragment_container"
            android:layout_width="280sp"
            android:layout_height="150sp"
            android:layout_below="@id/partner_details_address"
            android:layout_centerHorizontal="true">

        </RelativeLayout>

        <comcesar1287.github.www.saudecard.controller.custom_widgets.MyCustomTextView
            android:textColor="@color/colorTextPartner"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/partner_details_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map_fragment_container"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30sp"
            android:paddingStart="30sp"
            android:paddingRight="30sp"
            android:paddingEnd="30sp"/>

        <comcesar1287.github.www.saudecard.controller.custom_widgets.MyCustomTextView
            android:textColor="@color/colorTextPartner"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/partner_details_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/partner_details_phone"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30sp"
            android:paddingStart="30sp"
            android:paddingRight="30sp"
            android:paddingEnd="30sp"
            android:layout_marginBottom="20sp"/>

    </RelativeLayout>

</ScrollView>
